const int led = 12;
const int led2 = 2;
const int pir = A0;  
const int LightS = A1;
const unsigned long temporisation = 6000UL;
boolean LedOn = false;           
int mouvement = 0;
int lum = 1000;
unsigned long chrono;
unsigned long temps;

void setup() {
  
  Serial.begin(9600);
  pinMode(led, OUTPUT);
  pinMode(led2, OUTPUT);
  pinMode(pir, INPUT);  
  pinMode(LightS, INPUT);

}

void loop() {
  lum = analogRead(LightS) ;
  temps = millis();
  if (lum <= 400) {
      digitalWrite(led2, HIGH);      
      mouvement = analogRead(pir) ;
      if (mouvement > 0) {
         
         digitalWrite(led, HIGH);  
         LedOn = true ;    
         chrono = temps;      
      }
      else if ((temps - chrono >= temporisation) && (LedOn == true)) {
        digitalWrite(led, LOW);   
        LedOn = false ;          
      }   
      else if (LedOn == true) { 
        Serial.println(".");
      }
  }
  else {
      digitalWrite(led2, LOW); 
  }
  delay(1000);
}
